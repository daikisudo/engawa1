
<section class="slice sct-color-1">
  <div class="container">
    <div class="row">
      <div class="col-md-12">


<div class="row">
          <div class="col-md-6 col-md-offset-3 post_image_form">
            <div class="section-title-wrapper style-1 v1">

<div class="text-center pt-5">


<h2>メールアドレス・パスワード変更</h2>

<div class="field">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
 <table>
  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company.errors.count, "件のエラーがあります。") %> </h2>
      <div class="ul-align-center">
      <ul>
      <% @company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
     </div>
     </div>
   <% end %>
</div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <br>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :パスワード %> <br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> 文字以上</em>
    <% end %>
  </div>

 <br>

  <div class="field">
    <%= f.label :確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

   <br>

  <div class="field">
    <%= f.label :現在のパスワード %> <br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

   <br>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>

<% end %>
</table>
<br>

<%= button_to ">変更をやめる", registration_path(resource_name), data: { confirm: "本当によろしいですか?" }, method: :delete %></p>

<%= link_to "戻る", :back %>

