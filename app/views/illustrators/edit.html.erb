<section class="slice sct-color-1">
  <div class="container">
    <div class="row">
      <div class="col-md-12">


<div class="row">
          <div class="col-md-6 col-md-offset-3 post_image_form">
            <div class="section-title-wrapper style-1 v1">  


<h4>プロフィール編集</h4>

<br>

<%= form_for(@illustrator) do |f| %>
<div class="form-group has-icon">
    <label class="control-label sr-only" for="inputEmail">名前(ハンドルネーム)</label>
    <%= f.text_field :illustrator_name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前(ハンドルネーム)"%>

<br>

    <label class="control-label sr-only" for="inputEmail">名前(本名)</label>
    <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前(本名)"%>
    
  <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
</div>

<%= link_to "パスワード変更はこちら",  edit_illustrator_registration_path %>

<div class="form-group has-icon">
  <div class="user-edit-image">
    <%= attachment_image_tag @illustrator, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
</div>
  <label class="control-label sr-only" for="inputEmail">プロフィール画像</label>
<br>



  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>

 <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>