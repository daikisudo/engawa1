
              
<%= form_with(model: order, local: true) do |form| %>
<table>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "件のエラーがあります。") %> </h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br>
  <br> 
  
 
</form>

 <div>
  <%= form.label :参考画像 %>
  <%= form_for(@order, url: orders_path) do |f| %>

 </div>

 <div class="form-group has-icon">
  <div class="user-edit-image">
    <%= attachment_image_tag @order, :image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
</div>
  <label class="control-label sr-only" for="inputEmail">プロフィール画像</label>
<br>



  <%= f.attachment_field :image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    

  <br>

  <div class="field">

    <%= form.label :タイトル %><span class="badge">必須</span>
    <br>
    <%= form.text_field :name, size: 80 %>
  </div>

  <br>

  <div class="field">
    <%= form.label :"金額(50000円以上を設定)" %>
    <br>
    <%= form.text_field :amount %>
  </div>

  <br>

  <div class="field">
    <%= form.label :説明文 %><span class="badge">必須</span>
    <br>
    <%= form.text_area :caption, size: "83x10" %>
  </div>

<br>



<div>
  <%= form.hidden_field :illustrator_id, :value => current_illustrator.id %>
</div>



  <br>
  
  <div class="actions">
    <%= form.submit "保存", class: "btn btn-primary"%>
  </div>
</table>

<% end %>
<% end %>