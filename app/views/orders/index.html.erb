<h1>依頼管理</h1>

<table class="table table-striped">
  <thead>
    <tr>
     <th>タイトル</th>
    
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <if @order.illustrator.id == current_illustrator.id %>

    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        
      <!--   illustrator.idを非表示 -->
        <td><% order.illustrator %></td>
　　　　　
　　　　

        <td><%= link_to '詳細', order, class: 'btn btn-info' %></td>
        <td><%= link_to '編集', edit_order_path(order), class: 'btn btn-primary' %></td>
        <td><%= link_to '削除', order, method: :delete, data: { confirm: '本当によろしいですか?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

